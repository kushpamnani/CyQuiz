<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/S"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/Normal_Cost_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="166dp"
        android:scaleX="4"
        android:scaleY="4"
        android:text="Normal Cost"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Skill_Level_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="176dp"
        android:layout_marginTop="182dp"
        android:layout_marginEnd="177dp"
        android:scaleX="4"
        android:scaleY="4"
        android:text="Skill level"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Normal_Cost_txt" />

    <Button
        android:id="@+id/More"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="65dp"
        android:layout_marginTop="393dp"
        android:layout_marginEnd="108dp"
        android:text="+"
        android:translationY="-10dp"
        app:layout_constraintEnd_toStartOf="@+id/Less"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Less"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="108dp"
        android:layout_marginTop="399dp"
        android:layout_marginEnd="62dp"
        android:text="-"
        android:translationY="-13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/More"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Final_Cost_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="176dp"
        android:layout_marginTop="296dp"
        android:layout_marginEnd="173dp"
        android:scaleX="3"
        android:scaleY="3"
        android:text="Final Cost"
        android:translationY="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Skill_Level" />

    <TextView
        android:id="@+id/Final_Cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="177dp"
        android:layout_marginTop="187dp"
        android:layout_marginEnd="177dp"
        android:scaleX="4"
        android:scaleY="4"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Final_Cost_txt" />

    <TextView
        android:id="@+id/Cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="174dp"
        android:layout_marginEnd="179dp"
        android:layout_marginBottom="95dp"
        android:scaleX="3"
        android:scaleY="3"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/Skill_Level_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/Skill_Level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="174dp"
        android:layout_marginBottom="345dp"
        android:scaleX="5"
        android:scaleY="5"
        android:text="TextView"
        android:translationY="150dp"
        app:layout_constraintBottom_toTopOf="@+id/Final_Cost_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Cost" />
</androidx.constraintlayout.widget.ConstraintLayout>